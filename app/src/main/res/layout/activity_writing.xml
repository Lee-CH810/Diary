<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingActivity">

    <!-- 뒤로 가기 -->
    <ImageView
        android:id="@+id/writing_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_back_arrow"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 의상 입력란 -->
    <ImageView
        android:id="@+id/writing_cap_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_cap"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--RecyclerView-->

    <ImageView
        android:id="@+id/writing_accessories_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_accessory"
        app:layout_constraintStart_toStartOf="@id/writing_bag_iv"
        app:layout_constraintTop_toTopOf="@id/writing_cap_iv"/>


    <ImageView
        android:id="@+id/writing_tshirt_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_tshirt"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/writing_cap_iv"
        app:layout_constraintStart_toStartOf="@id/writing_cap_iv"
        app:layout_constraintEnd_toEndOf="@id/writing_cap_iv"/>

    <!--RecyclerView-->

    <ImageView
        android:id="@+id/writing_pants_iv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_pants"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/writing_tshirt_iv"
        app:layout_constraintStart_toStartOf="@id/writing_tshirt_iv"
        app:layout_constraintEnd_toEndOf="@id/writing_tshirt_iv"/>

    <!--RecyclerView-->

    <ImageView
        android:id="@+id/writing_shoes_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_shoes"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/writing_pants_iv"
        app:layout_constraintStart_toStartOf="@id/writing_pants_iv"
        app:layout_constraintEnd_toEndOf="@id/writing_pants_iv"/>

    <!--RecyclerView-->

    <ImageView
        android:id="@+id/writing_bag_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_bag"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@id/writing_tshirt_iv"
        app:layout_constraintTop_toTopOf="@id/writing_tshirt_iv"/>

    <!--RecyclerView-->

    <ImageView
        android:id="@+id/writing_outerwear_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_outerwear"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@id/writing_tshirt_iv"
        app:layout_constraintTop_toTopOf="@id/writing_tshirt_iv"/>

    <!--RecyclerView-->

</androidx.constraintlayout.widget.ConstraintLayout>